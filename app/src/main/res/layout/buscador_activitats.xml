<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grd_bg"
    >
    <EditText
        android:id="@+id/etBuscadorActivitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/buscar"
        android:layout_marginTop="24dp"
        style="@style/campo"/>
    <Button
        android:id="@+id/btnBuscarActivitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscadorAct"
        android:layout_below="@+id/etBuscadorActivitat"
        style="@style/botones"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnBuscarActivitat"
        android:layout_marginTop="12dp"
        style="@style/campo">

    </ListView>
</RelativeLayout>